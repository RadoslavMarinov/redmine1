<h3>Add new product</h3>
<h4><%= @project %></h4>
<%= form_with scope: :product, local: true do |form| %>

  <%= form.hidden_field :project_id, :value => @project.identifier %>
   
  <%= hidden_field_tag "project_id", "#{@project.identifier}" %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
  </p>

  <p>
    <%= form.label :amount %><br>
    <%= form.text_field :amount %>
  </p>

  <p>
    <%= form.label :release_date %><br>
    <%= form.date_field :release_date %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>